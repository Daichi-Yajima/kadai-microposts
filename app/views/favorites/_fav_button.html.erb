<% if micropost.faving?(current_user) %>
   <%= form_for(micropost.favorites.find_by(user_id: current_user.id), html: { method: :delete}) do |f| %>
     <%= hidden_field_tag :micropost_id, micropost.id %>
     <%= f.submit '解除', class: 'btn btn-info' %>
    <% end %>
   <% else %>
    <%= form_for(micropost.favorites.build) do |f| %>
     <%= hidden_field_tag :micropost_id, micropost.id %>
     <%= f.submit 'いいね', class: 'btn btn-info' %>
   <% end %>
<% end %>